@namespace MudBlazor.Charts
@using System.Globalization
@inherits DonutBase

<svg class="mud-chart-donut" width="@MudChartParent.Width" height="@MudChartParent.Height" viewBox="0 0 42 42">
    <Filters />
    <circle class="mud-donut-ring" cx="20" cy="20" r="15.91549430918954"></circle>
    @foreach (var item in Circles.ToList())
    {
        <circle class="mud-chart-serie mud-donut-segment" stroke="@(ChartOptions.ChartPalette.GetValue(item.Index % ChartOptions.ChartPalette.Count()))"
                cx="@ToS(item.CX)"
                cy="@ToS(item.CY)"
                r="@ToS(item.Radius)"
                stroke-dasharray="@item.StrokeDashArray"
                stroke-dashoffset="@ToS(item.StrokeDashOffset)">
        </circle>
    }
    <circle class="mud-donut-hole" cx="21" cy="21" r="13.4"></circle>
</svg>
<Legend Data="@Legends" />
